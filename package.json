    "babel-preset-es2015": "^6.24.1",
    "babel-preset-es2016": "^6.24.1",
    "browserify": "^15.2.0",
    "bulma": "^0.6.2",
    "electron-json-storage": "^4.1.0",
    "eth-sig-util": "^1.4.2",
    "ethereumjs-util": "^5.1.5",
    "express": "^4.16.3",
    "extract-text-webpack-plugin": "^3.0.2",
